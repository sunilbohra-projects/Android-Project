<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/deal_list_item"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentTop="true"
  android:orientation="horizontal"
  android:padding="5dp">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/deal_list_item_image_view"
      android:layout_width="@dimen/deal_list_item_image_size"
      android:layout_height="@dimen/deal_list_item_image_size" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/deal_list_item_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24sp" />
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/gray_color"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deal_list_item_title">
    <TextView
      android:id="@+id/deal_list_item_price"
        android:layout_marginTop="16dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="18sp" />

      <TextView
          android:id="@+id/deal_list_item_ship"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="22dp"
          android:text="@string/ship"
          android:textColor="@android:color/background_dark"
          android:layout_toLeftOf="@+id/deal_list_item_or"
          android:layout_marginRight="8dp"
          android:textSize="18sp" />
      <TextView
          android:id="@+id/deal_list_item_or"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="22dp"
          android:text="@string/or"
          android:layout_toLeftOf="@+id/ring"
          android:layout_marginRight="8dp"
          android:textSize="18sp" />
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_alignParentRight="true"
          android:id="@+id/ring"
          android:src= "@drawable/rounded_circle_ring">
      </ImageView>
      <TextView
          android:id="@+id/deal_list_item_aisle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="22dp"
          android:layout_marginStart="12dp"
          android:layout_toRightOf="@+id/deal_list_item_or"
          android:textColor="@color/red_color"
          android:textSize="18sp" />
    </RelativeLayout>
  </LinearLayout>

</LinearLayout>
